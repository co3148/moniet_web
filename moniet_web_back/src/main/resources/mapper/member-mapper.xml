<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace= "kr.or.iei.member.model.dao.MemberDao">
	<select id="selectOneMember" resultType="member">
		select * from member where member_id=#{memberId}
	</select>

	<insert id="insertMember">
		insert into member values(member_seq.nextval,#{memberId},#{memberPw},#{memberName},#{memberPhone},#{memberEmail},1,0,#{imgFile})
	</insert>

	<delete id="deleteMember">
		delete from member where member_id=#{memberId}
	</delete>
	
	<update id="updateMemberInfo">
		update member set member_phone=#{memberPhone}, member_email=#{memberEmail} where member_id=#{memberId}
	</update>
	
	<update id="updatePwMember">
		update member set member_pw=#{memberPw} where member_id=#{memberId}
	</update>
</mapper>